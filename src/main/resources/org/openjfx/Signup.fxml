<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.SignupController">
    <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Label" />
         </children>
      </HBox>
    </top>
   <center>
          <VBox fx:id="contentBox" alignment="CENTER" spacing="24.0" BorderPane.alignment="CENTER">
              <children>
                  <Label fx:id="titleLabel" text="Crie uma conta">
                      <font>
                          <Font name="FreeMono Bold" size="24.0" />
                      </font>
            </Label>
                  <Label fx:id="subtitleLabel" text="Insira seu e-mail e senha para se cadastrar no ydev" textAlignment="CENTER">
                      <font>
                          <Font name="FreeMono" size="11.0" />
                      </font>
            </Label>
            <TextField fx:id="usernameField" text="Nome de usuario" />
                  <TextField fx:id="emailField" text="email@domain.com" />
                  <PasswordField fx:id="passwordField" text="1234567810" />
            <Button fx:id="imageButton" mnemonicParsing="false" onAction="#chooseImage" text="Selecionar foto" />
                  <Button fx:id="signupButton" mnemonicParsing="false" onAction="#signup" prefHeight="46.0" prefWidth="210.0" text="Cadastrar" textAlignment="CENTER" textFill="WHITE">
                      <font>
                          <Font name="System Bold" size="20.0" />
                      </font>
            </Button>
                  <Hyperlink fx:id="loginLink" onAction="#switchScene" text="ou entre em uma conta" />
              </children>
              <effect>
                  <DropShadow offsetY="4.0">
                      <color>
                          <Color opacity="0.25" />
                      </color>
                  </DropShadow>
              </effect>
          </VBox>
   </center>
</BorderPane>
